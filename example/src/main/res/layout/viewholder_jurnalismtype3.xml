<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luck.ui.MainActivity">

    <TextView
        android:id="@+id/viewholder_jurnalism_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#34dfdd"
        android:text="身份证复印件不加这几个字，小心倾家荡产！"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/viewholder_jurnalism_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewholder_jurnalism_text1"
        android:layout_marginTop="10dp"
        android:textColor="#ABCDEF"
        android:text="搜狐网"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewholder_jurnalism_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewholder_jurnalism_text2"
        android:layout_marginTop="10dp"
        android:textColor="#ABCDEF"
        android:text="2015年06月03日 14:35:24"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewholder_jurnalism_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewholder_jurnalism_text3"
        android:layout_marginTop="10dp"
        android:text="以下是嵌套的ViewHolder"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/viewholder_jurnalism_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewholder_jurnalism_text4"
        android:layout_margin="10dp"
        android:background="#1df348"
        android:orientation="vertical"/>

</RelativeLayout>
